{
	"env": {
		"browser": true,
		"es2021": true,
		"jest/globals": true
	},
	"extends": ["standard", "plugin:react/recommended", "prettier"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"plugins": ["react", "jest"],

	"rules": {
		"react/react-in-jsx-scope": "off"
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}
